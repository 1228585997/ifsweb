/* pages/second/second.wxss */
.goback{
	position: fixed;
	left: 5%;
		top: 3%;
	
	}
	.second_box{
		width: 100%;
		height: 100vh;
		transition:all 1s;
	}
	.img,.go_img{
		width: 80rpx;
	}
	.lovebox{
		width: 80px;
		height: 80px;
		position:absolute;
		left:calc(50% - 50px);
		top:calc(50% - 50px);
		background-color:#e74c3c;
		transform:rotate(45deg) scale(.5);
		cursor:pointer;
		z-index:99;
	}
	.lovebox::before{
		content:'';
		width: 80px;
		position:absolute;
		height: 80px;
		border-radius:50%;
		position:absolute;
		background-color:#e74c3c;
		transform:translateX(-40px);
	}
	.lovebox::after{
		content:'';
		width: 80px;
		position:absolute;
		display:inline-block;
		height: 80px;
		border-radius:50%;
		background-color:#e74c3c;
		transform:translateY(-40px);
	}